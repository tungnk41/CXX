{
    "tasks": [
        {
            "label": "C++: Build",
            "command": "g++",
            "args": [
                "-std=c++23",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher":"$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
    ],
    "version": "2.0.0"
}